@model ItemRegistry.Models.Users

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <div id="login-div">
        @using (Html.BeginForm(FormMethod.Post)) {
        <table>
            <tr>
                <td></td>
                <td style="text-decoration:underline">App name</td>

            </tr>
            <tr>
                <td>@Html.LabelFor(model => model.Name)</td>
                <td>@Html.EditorFor(model => model.Name)</td>

            </tr>
            <tr>
                <td>@Html.LabelFor(model => model.Password)</td>
                <td>@Html.EditorFor(model => model.Password)</td>

            </tr>
            <tr>
                <td>@Html.LabelFor(model => model.ConfirmPassword)</td>
                <td>@Html.EditorFor(model => model.ConfirmPassword)</td>

            </tr>
            <tr>
                <td><input type="submit" name="name" value="Login"></td>
                <td><input type="reset" name="name" value="Clear"></td>

            </tr>


        </table>

        }
    </div>
</body>
</html>
